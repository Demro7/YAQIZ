# ============================================================
# YAQIZ - PPE Detection AI Platform
# Copy this file to .env and fill in your values
# cp .env.example .env
# ============================================================

# ── Application ──
YAQIZ_ENV=development
SECRET_KEY=generate-a-strong-random-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# ── YOLO Model ──
YOLO_WEIGHTS_PATH=../YOLO-Weights/ppe.pt
YOLO_CONFIDENCE=0.5

# ── Database ──
# SQLite (local development)
DATABASE_URL=sqlite:///./yaqiz.db
# PostgreSQL (production)
# DATABASE_URL=postgresql://user:password@localhost:5432/yaqiz

# ── CORS ──
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:8000

# ── Telegram Bot Notifications ──
# 1. Talk to @BotFather on Telegram → /newbot → copy the token
# 2. Send a message to your bot, then visit:
#    https://api.telegram.org/bot<TOKEN>/getUpdates
#    Find your chat_id in the response
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
TELEGRAM_ENABLED=false

# ── Upload Limits ──
MAX_UPLOAD_SIZE_MB=500
UPLOAD_DIR=uploads
RESULTS_DIR=results

# ── Supabase (optional) ──
SUPABASE_URL=
SUPABASE_KEY=

# ── Gemini AI (optional) ──
GEMINI_API_KEY=
GEMINI_MODEL=gemini-1.5-flash
